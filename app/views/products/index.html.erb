<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <!-- Back button -->
    <%= link_to raw('<i class="bi bi-arrow-left me-2"></i> Back'), 
      "javascript:history.back()", 
      class: "btn btn-back rounded-pill px-4 me-3" %>

    <!-- Search form -->
    <%= form_with url: products_path, method: :get, local: true, class: "d-flex flex-grow-1 me-3" do %>
      <%= text_field_tag :q, params[:q], placeholder: "Search products...", class: "form-control me-2 rounded-pill" %>
      <%= submit_tag "Search", class: "btn btn-outline-primary rounded-pill" %>
    <% end %>

    <h1 class="fw-bold text-primary m-0">Products</h1>
  </div>

  <div class="row g-4">
    <% @products.each do |p| %>
      <div class="col-md-4 col-sm-6">
        <div class="card shadow-sm border-0 rounded-4 h-100">
          
          <!-- Product Image from Picsum -->
          <img src="https://picsum.photos/seed/<%= ERB::Util.url_encode(p.name) %>/400/250" 
               class="card-img-top" 
               style="object-fit: cover; height: 200px;" 
               alt="<%= p.name %>">

          <div class="card-body d-flex flex-column">
            <h5 class="card-title fw-semibold">
              <%= link_to p.name, p, class: "text-decoration-none text-dark" %>
            </h5>
            <p class="fw-bold text-success fs-5">â‚¹<%= p.price %></p>

            <div class="mt-auto">
              <%= button_to "Add to Cart", add_to_cart_path(p), 
                    method: :post, 
                    class: "btn btn-primary w-100 rounded-pill" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="text-center mt-4">
    <%= link_to "View Cart", cart_path, class: "btn btn-outline-success rounded-pill px-4" %>
  </div>
</div>
