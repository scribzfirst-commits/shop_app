<div style="max-width: 600px; margin: 0 auto; background: #ffffff; border-radius: 8px; padding: 20px; font-family: Arial, sans-serif; border: 1px solid #e0e0e0; box-shadow: 0 2px 6px rgba(0,0,0,0.1);">
  
  <!-- Header -->
  <h2 style="color: #4CAF50; margin-top: 0; text-align: center;">
    Payment Receipt
  </h2>
  <p style="text-align: center; font-size: 14px; color: #555;">
    Thank you for your purchase! Below are your order details.
  </p>

  <!-- Greeting -->
  <p style="font-size: 16px; color: #333;">
    <strong><%= @greeting %></strong>
  </p>

  <!-- Order Summary -->
  <table style="width: 100%; border-collapse: collapse; margin-top: 10px;">
    <thead>
      <tr style="background-color: #f8f8f8;">
        <th style="padding: 10px; border: 1px solid #ddd; text-align: left;">Item</th>
        <th style="padding: 10px; border: 1px solid #ddd; text-align: right;">Unit Price</th>
        <th style="padding: 10px; border: 1px solid #ddd; text-align: center;">Qty</th>
        <th style="padding: 10px; border: 1px solid #ddd; text-align: right;">Total</th>
      </tr>
    </thead>
    <tbody>
      <% @order.order_items.each do |item| %>
        <tr>
          <td style="padding: 10px; border: 1px solid #ddd;"><%= item.product.name %></td>
          <td style="padding: 10px; border: 1px solid #ddd; text-align: right;">₹<%= sprintf('%.2f', item.price) %></td>
          <td style="padding: 10px; border: 1px solid #ddd; text-align: center;"><%= item.quantity %></td>
          <td style="padding: 10px; border: 1px solid #ddd; text-align: right;">₹<%= sprintf('%.2f', item.price * item.quantity) %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
  <tr style="background-color: #f8f8f8;">
    <td colspan="3" style="padding: 10px; border: 1px solid #ddd; text-align: right; font-weight: bold;">
      Grand Total
    </td>
    <td style="padding: 10px; border: 1px solid #ddd; text-align: right; font-weight: bold;">
      ₹<%= sprintf('%.2f', @order.order_items.sum { |i| i.price * i.quantity }) %>
    </td>
  </tr>
</tfoot>
  </table>

  <!-- Footer -->
  <p style="margin-top: 20px; font-size: 14px; color: #555; text-align: center;">
    If you have any questions, contact <a href="mailto:support@scribzfirst.com" style="color: #4CAF50; text-decoration: none;">support@scribz.com</a>.
  </p>

</div>
