<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">

      <!-- Card -->
      <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body text-center p-5">

          <!-- Title -->
          <h1 class="fw-bold text-primary mb-2">
            <i class="bi bi-credit-card"></i> Payment
          </h1>
          <p class="text-muted mb-4">Complete your payment securely</p>

          <!-- Divider -->
          <hr class="my-4">

          <!-- QR Code Section -->
          <div class="p-3 bg-light rounded-4 mb-4">
            <img src="https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=DummyPaymentLink"
                 alt="Payment QR Code"
                 class="img-fluid rounded shadow-sm">
            <p class="mt-3 text-secondary small">
              Scan with your UPI or payment app
            </p>
          </div>

          <!-- Amount -->
          <h4 class="fw-bold mb-4">
            Amount to Pay:
            <span class="text-success">
             â‚¹ <%= @order_total %>
            </span>
          </h4>

          <!-- Buttons -->
          <div class="d-flex flex-column flex-sm-row justify-content-center gap-3">
            <%= button_to "Payment Completed",
              complete_payments_path(order_id: @order.id),
              method: :post,
              class: "btn btn-success rounded-pill px-4 py-2" %>
            <%= link_to "Cancel", cart_path, class: "btn btn-outline-danger rounded-pill px-4 py-2" %>
          </div>

          <!-- Footer Note -->
          <p class="mt-4 text-muted small">
            Your transaction is encrypted and secure.
          </p>

        </div>
      </div>

    </div>
  </div>
</div>
