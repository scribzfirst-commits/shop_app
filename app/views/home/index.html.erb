<div class="container mt-5">
  <h1 class="mb-4 text-center fw-bold text-primary">Our Products</h1>

  <div class="row g-4">
    <% @products.each do |product| %>
      <div class="col-md-4 col-sm-6">
        <div class="card h-100 shadow border-0 rounded-4 overflow-hidden product-card">
          
          <!-- Product image -->
          <% if product.respond_to?(:image_url) && product.image_url.present? %>
            <img src="<%= product.image_url %>" class="card-img-top" alt="<%= product.name %>">
          <% else %>
            <!-- Fallback to Picsum image seeded with product name -->
            <img src="https://m.media-amazon.com/images/I/91E69wClQ4L._UY1100_.jpg" 
                 class="card-img-top" 
                 alt="<%= product.name %>">
          <% end %>

          <div class="card-body d-flex flex-column p-4">
            <h5 class="card-title fw-semibold"><%= product.name %></h5>
            <p class="card-text text-muted small mb-2"><%= truncate(product.description, length: 80) %></p>
            <p class="fw-bold text-success fs-5 mb-3">â‚¹ <%= product.price %></p>

            <div class="mt-auto d-flex gap-2">
              <%= link_to "View", product_path(product), class: "btn btn-outline-primary btn-sm px-3 rounded-pill" %>
              <%= button_to "Add to Cart",
                add_to_cart_path(product),
                method: :post,
                data: { turbo_stream: true },
                class: "btn btn-primary btn-sm px-3 rounded-pill" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


